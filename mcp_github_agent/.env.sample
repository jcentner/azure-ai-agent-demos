# Azure AI Foundry project endpoint (e.g., https://<proj>.<region>.models.ai.azure.com)
PROJECT_ENDPOINT=

# Name of the model deployment to use when creating the agent (e.g., gpt-4o-mini)
MODEL_DEPLOYMENT_NAME=

# Agent name to create (no idempotency in this simple demo)
AGENT_NAME=mcp-github-readonly-demo

# One (or both) of these; ask_agent.py will prefer OAuth if both are set
GITHUB_OAUTH_TOKEN=
GITHUB_PAT=

# Optional: you can set AGENT_ID manually instead of using ./.agent_id
# AGENT_ID=
